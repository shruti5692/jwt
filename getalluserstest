package tests;

import io.restassured.RestAssured;
import io.restassured.response.Response;
import org.testng.annotations.Test;

public class GetAllUsersTest extends BaseTest {

    @Test(dataProvider = "testData", dataProviderClass = XLUtility.class)
    public void testGetAllUsers(String testType, String testName, String baseUrl, String endpoint,
                                String username, String password, String expectedResult, int rowIndex) {

        System.out.println("Running " + testType + " test -> " + testName);

        String token = getAuthToken(baseUrl, username, password);

        Response response = RestAssured.given()
                .baseUri(baseUrl)
                .header("Authorization", "Bearer " + token)
                .when()
                .get(endpoint);

        System.out.println("Response: " + response.asString());

        if ("PASS".equalsIgnoreCase(expectedResult)) {
            response.then().statusCode(200);
        } else {
            response.then().statusCode(403);
        }
    }
}
