package tests;

import io.restassured.RestAssured;
import io.restassured.response.Response;

public class BaseTest {

    protected String getAuthToken(String baseUrl, String username, String password) {
        Response response = RestAssured.given()
                .baseUri(baseUrl)
                .contentType("application/json")
                .body("{\"username\":\"" + username + "\", \"password\":\"" + password + "\"}")
                .when()
                .post("/auth/login");

        System.out.println("Login Response: " + response.asString());

        // Since login API returns plain JWT string
        return response.asString().replace("\"", "").trim();
    }
}
