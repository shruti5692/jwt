package tests;

import io.restassured.RestAssured;
import io.restassured.response.Response;

public class BaseTest {
    protected String getAuthToken(String baseUrl, String username, String password) {
        Response response = RestAssured.given()
                .contentType("application/json")
                .body("{\"username\":\"" + username + "\", \"password\":\"" + password + "\"}")
                .post(baseUrl + "/auth/login");

        if (response.statusCode() == 200) {
            return response.getBody().asString(); // JWT returned directly as string
        } else {
            throw new RuntimeException("Failed to authenticate user: " + username +
                    " Response: " + response.asString());
        }
    }
}
