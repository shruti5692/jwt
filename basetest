package tests;

import io.restassured.RestAssured;
import io.restassured.response.Response;

public class BaseTest {

    protected static String authToken;

    // Generate and cache JWT token
    protected String getAuthToken(String baseUrl, String username, String password) {
        if (authToken == null) {
            Response response = RestAssured.given()
                    .baseUri(baseUrl)
                    .contentType("application/json")
                    .body("{\"username\":\"" + username + "\", \"password\":\"" + password + "\"}")
                    .when()
                    .post("/auth/login");

            System.out.println("Login Response: " + response.asString());

            if (response.statusCode() == 200) {
                authToken = response.jsonPath().getString("token");
            } else {
                throw new RuntimeException("Failed to authenticate, status: " + response.statusCode());
            }
        }
        return authToken;
    }
}
