package tests;

import io.restassured.RestAssured;
import io.restassured.response.Response;
import org.testng.Assert;
import org.testng.annotations.DataProvider;
import org.testng.annotations.Test;
import utils.XLUtility;

public class AuthAPITest extends BaseTest {

    @DataProvider(name = "AuthData")
    public Object[][] getData() throws Exception {
        return XLUtility.getTestData("Tests");
    }

    @Test(dataProvider = "AuthData")
    public void testRegister(String testType, String testName, String baseUrl,
                             String endpoint, String username, String password,
                             String expectedResult, String status, int rowIndex) throws Exception {

        if (!"Register".equalsIgnoreCase(testType)) return; // skip non-register tests

        System.out.println("Running Register test -> " + testName);

        Response response = RestAssured.given()
                .contentType("application/json")
                .body("{\"username\":\"" + username + "\", \"password\":\"" + password + "\"}")
                .post(baseUrl + endpoint);

        System.out.println("Response: " + response.asString());

        try {
            if ("PASS".equalsIgnoreCase(expectedResult)) {
                response.then().statusCode(200);
                XLUtility.setCellData("Tests", rowIndex, 7, "PASS");
            } else {
                response.then().statusCode(403);
                XLUtility.setCellData("Tests", rowIndex, 7, "PASS");
            }
        } catch (AssertionError e) {
            XLUtility.setCellData("Tests", rowIndex, 7, "FAIL");
            throw e;
        }
    }
}
