package tests;

import base.BaseTest;
import io.restassured.RestAssured;
import io.restassured.response.Response;
import org.testng.Assert;
import org.testng.annotations.Test;
import utils.XLUtility;

public class AuthAPITest extends BaseTest {

    @Test(dataProvider = "registerData")
    public void testRegister(String testName, String baseUrl, String endpoint,
                             String username, String password, int rowIndex) throws Exception {
        System.out.println("Running Register test -> " + testName);

        Response response = RestAssured.given()
                .baseUri(baseUrl)
                .contentType("application/json")
                .body("{\"username\":\"" + username + "\", \"password\":\"" + password + "\"}")
                .when()
                .post(endpoint)
                .then()
                .extract().response();

        System.out.println("Response: " + response.asString());

        XLUtility xl = new XLUtility("testdata.xlsx");
        if (response.statusCode() == 200) {
            xl.setCellData("Sheet1", rowIndex, 6, "PASS");
        } else {
            xl.setCellData("Sheet1", rowIndex, 6, "FAIL");
        }

        Assert.assertEquals(response.statusCode(), 200);
    }
}
