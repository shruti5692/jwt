package tests;

import io.restassured.RestAssured;
import io.restassured.response.Response;
import org.testng.annotations.Test;
import utils.XLUtility;

public class AuthAPITest {

    @Test(dataProvider = "testData", dataProviderClass = XLUtility.class)
    public void testRegister(String testType, String testName, String baseUrl, String endpoint,
                             String username, String password, String expectedResult, int rowIndex) {

        if (!"Register".equalsIgnoreCase(testType)) return;

        Response response = RestAssured.given()
                .baseUri(baseUrl)
                .contentType("application/json")
                .body("{\"username\":\"" + username + "\", \"password\":\"" + password + "\"}")
                .when()
                .post(endpoint);

        try {
            if ("PASS".equalsIgnoreCase(expectedResult)) {
                response.then().statusCode(200);
            } else {
                response.then().statusCode(400);
            }
            XLUtility.setCellData("Tests", rowIndex, 6, "PASS");
        } catch (AssertionError e) {
            try { XLUtility.setCellData("Tests", rowIndex, 6, "FAIL"); } catch (Exception ignored) {}
            throw e;
        } catch (Exception io) { io.printStackTrace(); }
    }
}
